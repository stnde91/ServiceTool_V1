<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/android:colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_large">

        <!-- Minimalist Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/multicell_overview_title"
            android:textAppearance="?attr/textAppearanceHeadlineMedium"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginBottom="@dimen/spacing_small" />

        <TextView
            android:id="@+id/textOverallStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/system_ready_status"
            android:textAppearance="?attr/textAppearanceBodyLarge"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginBottom="@dimen/spacing_xlarge" />

        <!-- Configuration Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_large"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_large">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/configuration_title"
                    android:textAppearance="?attr/textAppearanceTitleLarge"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="@dimen/spacing_large" />

                <!-- Cell Count Selection -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/activeCellsInputLayout"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Anzahl aktive Zellen">

                    <AutoCompleteTextView
                        android:id="@+id/autoCompleteActiveCells"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        tools:ignore="LabelFor" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Cells Overview Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_large"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_large">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cells_status_title"
                    android:textAppearance="?attr/textAppearanceTitleLarge"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="@dimen/spacing_large" />

                <!-- First Row: Cells 2, 3, 4, 5 -->
                <LinearLayout
                    android:id="@+id/rowCell1to4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_small"
                    android:orientation="horizontal">

                    <!-- Cell 2 -->
                    <LinearLayout
                        android:id="@+id/layoutCell2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/spacing_xsmall"
                        android:layout_weight="1"
                        android:background="?attr/colorSurfaceVariant"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/spacing_medium"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cell_2_label"
                            android:textAppearance="?attr/textAppearanceLabelLarge"
                            android:textColor="?attr/colorOnSurface" />

                        <TextView
                            android:id="@+id/textCountsCell2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_xsmall"
                            android:text="@string/default_zero_value"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            android:textColor="?attr/colorPrimary"
                            tools:text="87" />

                        <TextView
                            android:id="@+id/textSerialCell2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_xsmall"
                            android:text="@string/serial_number_placeholder"
                            android:textAppearance="?attr/textAppearanceLabelSmall"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:fontFamily="monospace"
                            tools:text="S/N: 654321" />

                        <ImageView
                            android:id="@+id/statusIndicatorCell2"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginTop="@dimen/spacing_small"
                            android:src="@drawable/ic_status_pending"
                android:contentDescription="@string/cd_status_icon" />

                    </LinearLayout>

                    <!-- Repeat for cells 3, 4, 5 with similar structure -->
                    <LinearLayout
                        android:id="@+id/layoutCell3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp"
                        android:layout_weight="1"
                        android:background="?attr/colorSurfaceVariant"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/spacing_medium"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cell_3_label"
                            android:textAppearance="?attr/textAppearanceLabelLarge"
                            android:textColor="?attr/colorOnSurface" />

                        <TextView
                            android:id="@+id/textCountsCell3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_xsmall"
                            android:text="@string/default_zero_value"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            android:textColor="?attr/colorPrimary"
                            tools:text="112" />

                        <TextView
                            android:id="@+id/textSerialCell3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_xsmall"
                            android:text="@string/serial_number_placeholder"
                            android:textAppearance="?attr/textAppearanceLabelSmall"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:fontFamily="monospace"
                            tools:text="S/N: 789012" />

                        <ImageView
                            android:id="@+id/statusIndicatorCell3"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginTop="@dimen/spacing_small"
                            android:src="@drawable/ic_status_pending"
                android:contentDescription="@string/cd_status_icon" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutCell4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp"
                        android:layout_weight="1"
                        android:background="?attr/colorSurfaceVariant"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/spacing_medium"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cell_4_label"
                            android:textAppearance="?attr/textAppearanceLabelLarge"
                            android:textColor="?attr/colorOnSurface" />

                        <TextView
                            android:id="@+id/textCountsCell4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_xsmall"
                            android:text="@string/default_zero_value"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            android:textColor="?attr/colorPrimary"
                            tools:text="78" />

                        <TextView
                            android:id="@+id/textSerialCell4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_xsmall"
                            android:text="@string/serial_number_placeholder"
                            android:textAppearance="?attr/textAppearanceLabelSmall"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:fontFamily="monospace"
                            tools:text="S/N: 345678" />

                        <ImageView
                            android:id="@+id/statusIndicatorCell4"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginTop="@dimen/spacing_small"
                            android:src="@drawable/ic_status_pending"
                android:contentDescription="@string/cd_status_icon" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutCell5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_xsmall"
                        android:layout_weight="1"
                        android:background="?attr/colorSurfaceVariant"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/spacing_medium"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cell_5_label"
                            android:textAppearance="?attr/textAppearanceLabelLarge"
                            android:textColor="?attr/colorOnSurface" />

                        <TextView
                            android:id="@+id/textCountsCell5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_xsmall"
                            android:text="@string/default_zero_value"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            android:textColor="?attr/colorPrimary"
                            tools:text="103" />

                        <TextView
                            android:id="@+id/textSerialCell5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_xsmall"
                            android:text="@string/serial_number_placeholder"
                            android:textAppearance="?attr/textAppearanceLabelSmall"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:fontFamily="monospace"
                            tools:text="S/N: 901234" />

                        <ImageView
                            android:id="@+id/statusIndicatorCell5"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginTop="@dimen/spacing_small"
                            android:src="@drawable/ic_status_pending"
                android:contentDescription="@string/cd_status_icon" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Second Row: Cells 1, 8, 7, 6 -->
                <LinearLayout
                    android:id="@+id/rowCell5to8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Similar structure for cells 1, 8, 7, 6 -->
                    <LinearLayout
                        android:id="@+id/layoutCell1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/spacing_xsmall"
                        android:layout_weight="1"
                        android:background="?attr/colorSurfaceVariant"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/spacing_medium"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cell_1_label"
                            android:textAppearance="?attr/textAppearanceLabelLarge"
                            android:textColor="?attr/colorOnSurface" />

                        <TextView
                            android:id="@+id/textCountsCell1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_xsmall"
                            android:text="@string/default_zero_value"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            android:textColor="?attr/colorPrimary"
                            tools:text="95" />

                        <TextView
                            android:id="@+id/textSerialCell1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_xsmall"
                            android:text="@string/serial_number_placeholder"
                            android:textAppearance="?attr/textAppearanceLabelSmall"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:fontFamily="monospace"
                            tools:text="S/N: 123456" />

                        <ImageView
                            android:id="@+id/statusIndicatorCell1"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginTop="@dimen/spacing_small"
                            android:src="@drawable/ic_status_pending"
                android:contentDescription="@string/cd_status_icon" />

                    </LinearLayout>

                    <!-- Repeat structure for cells 8, 7, 6 -->
                    <LinearLayout
                        android:id="@+id/layoutCell8"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp"
                        android:layout_weight="1"
                        android:background="?attr/colorSurfaceVariant"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/spacing_medium"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cell_8_label"
                            android:textAppearance="?attr/textAppearanceLabelLarge"
                            android:textColor="?attr/colorOnSurface" />

                        <TextView
                            android:id="@+id/textCountsCell8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_xsmall"
                            android:text="@string/default_zero_value"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            android:textColor="?attr/colorPrimary"
                            tools:text="101" />

                        <TextView
                            android:id="@+id/textSerialCell8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_xsmall"
                            android:text="@string/serial_number_placeholder"
                            android:textAppearance="?attr/textAppearanceLabelSmall"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:fontFamily="monospace"
                            tools:text="S/N: 890123" />

                        <ImageView
                            android:id="@+id/statusIndicatorCell8"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginTop="@dimen/spacing_small"
                            android:src="@drawable/ic_status_pending"
                android:contentDescription="@string/cd_status_icon" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutCell7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp"
                        android:layout_weight="1"
                        android:background="?attr/colorSurfaceVariant"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/spacing_medium"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cell_7_label"
                            android:textAppearance="?attr/textAppearanceLabelLarge"
                            android:textColor="?attr/colorOnSurface" />

                        <TextView
                            android:id="@+id/textCountsCell7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_xsmall"
                            android:text="@string/default_zero_value"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            android:textColor="?attr/colorPrimary"
                            tools:text="94" />

                        <TextView
                            android:id="@+id/textSerialCell7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_xsmall"
                            android:text="@string/serial_number_placeholder"
                            android:textAppearance="?attr/textAppearanceLabelSmall"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:fontFamily="monospace"
                            tools:text="S/N: 234567" />

                        <ImageView
                            android:id="@+id/statusIndicatorCell7"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginTop="@dimen/spacing_small"
                            android:src="@drawable/ic_status_pending"
                android:contentDescription="@string/cd_status_icon" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutCell6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_xsmall"
                        android:layout_weight="1"
                        android:background="?attr/colorSurfaceVariant"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/spacing_medium"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cell_6_label"
                            android:textAppearance="?attr/textAppearanceLabelLarge"
                            android:textColor="?attr/colorOnSurface" />

                        <TextView
                            android:id="@+id/textCountsCell6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_xsmall"
                            android:text="@string/default_zero_value"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            android:textColor="?attr/colorPrimary"
                            tools:text="89" />

                        <TextView
                            android:id="@+id/textSerialCell6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_xsmall"
                            android:text="@string/serial_number_placeholder"
                            android:textAppearance="?attr/textAppearanceLabelSmall"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:fontFamily="monospace"
                            tools:text="S/N: 567890" />

                        <ImageView
                            android:id="@+id/statusIndicatorCell6"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginTop="@dimen/spacing_small"
                            android:src="@drawable/ic_status_pending"
                android:contentDescription="@string/cd_status_icon" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Control Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_large"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_large">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/control_title"
                    android:textAppearance="?attr/textAppearanceTitleLarge"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="@dimen/spacing_large" />

                <!-- Button Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/spacing_medium">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonRefreshAll"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/spacing_small"
                        android:layout_weight="1"
                        android:text="@string/refresh_button_text"
                        app:icon="@drawable/ic_refresh_24" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonStartLiveAll"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_xsmall"
                        android:layout_marginEnd="@dimen/spacing_xsmall"
                        android:layout_weight="1"
                        android:text="@string/live_start_button"
                        app:icon="@drawable/ic_play_24" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonStopLiveAll"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_small"
                        android:layout_weight="1"
                        android:text="@string/live_stop_button"
                        app:icon="@drawable/ic_stop_24"
                        android:enabled="false" />

                </LinearLayout>

                <!-- Last Update Info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="?attr/colorSurfaceVariant"
                    android:padding="@dimen/spacing_medium"
                    android:gravity="center_vertical">

                    <com.google.android.material.progressindicator.CircularProgressIndicator
                        android:id="@+id/progressIndicatorOverall"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="@dimen/spacing_medium"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/textLastUpdateAll"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/not_loaded_yet"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        tools:text="Letzte Aktualisierung: 14:32:15" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Technical Details Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_large">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/technical_details_title"
                    android:textAppearance="?attr/textAppearanceTitleLarge"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="@dimen/spacing_large" />

                <!-- Common Baudrate -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_medium"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:background="?attr/colorSurfaceVariant"
                    android:padding="@dimen/spacing_medium">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="@dimen/spacing_medium"
                        android:src="@drawable/ic_speed_24"
                        app:tint="?attr/colorPrimary" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/baudrate_label"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            android:textColor="?attr/colorOnSurface" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/communication_speed_description"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/textBaudrateAll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/unknown_status"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textColor="?attr/colorPrimary"
                        tools:text="9600 bps" />

                </LinearLayout>

                <!-- Individual Cell Details Container -->
                <LinearLayout
                    android:id="@+id/layoutIndividualDetailsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:animateLayoutChanges="true" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>