<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/android:colorBackground"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Minimalist Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cell_configuration_title"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cell_config_subtitle"
            android:textSize="16sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginBottom="24dp" />

        <!-- Address Change Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/change_cell_address_title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="16dp" />

                <!-- Serial Number Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayoutSerialNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:hint="@string/serial_number_label"
                    app:helperText="@string/serial_number_hint"
                    app:counterEnabled="true"
                    app:counterMaxLength="12"
                    app:boxStrokeColor="?attr/colorPrimary"
                    app:hintTextColor="?attr/colorPrimary"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextSerialNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textAllCaps="true"
                        android:textSize="16sp"
                        android:fontFamily="monospace" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- New Address Selection -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/new_address_label"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/target_address_description"
                            android:textSize="14sp"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                    <Spinner
                        android:id="@+id/spinner_new_cell"
                        android:layout_width="120dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="16dp"
                        android:background="@drawable/spinner_background"
                        android:textColor="?attr/colorOnSurface" />

                </LinearLayout>

                <!-- Action Button -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_change_address"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:text="@string/change_address_button"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:backgroundTint="?attr/colorPrimary"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/ic_settings_24"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp"
                        android:enabled="false"
                        style="@style/Widget.Material3.Button" />

                    <ProgressBar
                        android:id="@+id/progress_bar"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginStart="16dp"
                        android:visibility="gone"
                        android:indeterminateTint="?attr/colorPrimary" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Filter Configuration Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/filter_configuration_title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="16dp" />

                <!-- Info Box -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="?attr/colorSurfaceVariant"
                    android:padding="16dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/filter_info_text"
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnSurfaceVariant" />

                </LinearLayout>

                <!-- Configuration Controls -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="?attr/colorSurfaceVariant"
                    android:padding="20dp"
                    android:layout_marginBottom="20dp">

                    <!-- Cell Count -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/active_cells_count_label"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="?attr/colorPrimary"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/active_cells_description"
                                android:textSize="12sp"
                                android:layout_marginTop="2dp"
                                android:textColor="?attr/colorOnSurfaceVariant" />

                        </LinearLayout>

                        <Spinner
                            android:id="@+id/spinner_cell_count"
                            android:layout_width="100dp"
                            android:layout_height="48dp"
                            android:layout_marginStart="12dp"
                            android:background="@drawable/spinner_background"
                            android:paddingStart="16dp"
                            android:paddingEnd="40dp"
                            android:gravity="center_vertical"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Filter Value -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/filter_value_label"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="?attr/colorOnSurface" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/filter_value_options"
                                android:textSize="12sp"
                                android:layout_marginTop="2dp"
                                android:textColor="?attr/colorOnSurfaceVariant" />

                        </LinearLayout>

                        <Spinner
                            android:id="@+id/spinner_filter_value"
                            android:layout_width="100dp"
                            android:layout_height="48dp"
                            android:layout_marginStart="12dp"
                            android:background="@drawable/spinner_background"
                            android:paddingStart="16dp"
                            android:paddingEnd="40dp"
                            android:gravity="center_vertical"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Status Display -->
                <TextView
                    android:id="@+id/text_filter_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/filter_function_ready"
                    android:textSize="14sp"
                    android:layout_marginBottom="20dp"
                    android:minHeight="40dp"
                    android:gravity="center_vertical"
                    android:background="?attr/colorSurfaceVariant"
                    android:padding="16dp"
                    android:textColor="?attr/colorPrimary"
                    android:drawableStart="@drawable/ic_status_success"
                    android:drawablePadding="12dp" />

                <!-- Action Button -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_set_filter"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:text="@string/set_filter_all_cells_button"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:backgroundTint="?attr/colorPrimary"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/ic_filter_24"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp"
                        style="@style/Widget.Material3.Button" />

                    <ProgressBar
                        android:id="@+id/progress_bar_filter"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginStart="16dp"
                        android:visibility="gone"
                        android:indeterminateTint="?attr/colorPrimary" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Status Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/status_title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/text_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ready_for_configuration"
                    android:textSize="16sp"
                    android:minHeight="48dp"
                    android:gravity="center_vertical"
                    android:background="?attr/colorSurfaceVariant"
                    android:padding="16dp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:drawableStart="@drawable/ic_status_pending"
                    android:drawablePadding="12dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Quick Tips Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="?attr/colorSurfaceVariant">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tips_hints_title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/configuration_tips"
                    android:textSize="14sp"
                    android:lineSpacingExtra="4dp"
                    android:textColor="?attr/colorOnSurfaceVariant" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>