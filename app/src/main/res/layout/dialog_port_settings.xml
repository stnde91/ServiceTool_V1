<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Baudrate -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/baudrate_label"
        android:textSize="14sp"
        android:textColor="?attr/colorOnSurface"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/spinnerBaudRate"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/spinner_background" />

    <!-- Data Bits -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/databits_label"
        android:textSize="14sp"
        android:textColor="?attr/colorOnSurface"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/spinnerDataBits"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/spinner_background" />

    <!-- Stop Bits -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/stopbits_label"
        android:textSize="14sp"
        android:textColor="?attr/colorOnSurface"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/spinnerStopBits"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/spinner_background" />

    <!-- Parity -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/parity_label"
        android:textSize="14sp"
        android:textColor="?attr/colorOnSurface"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/spinnerParity"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/spinner_background" />

    <!-- Flow Control -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/flow_control_label"
        android:textSize="14sp"
        android:textColor="?attr/colorOnSurface"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/spinnerFlowControl"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/spinner_background" />

    <!-- FIFO -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fifo_label"
        android:textSize="14sp"
        android:textColor="?attr/colorOnSurface"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/spinnerFifo"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/spinner_background" />

    <!-- Warning -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/moxa_restart_warning"
        android:textSize="12sp"
        android:textColor="@color/status_warning_color"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        android:background="?attr/colorSurfaceVariant" />

</LinearLayout>