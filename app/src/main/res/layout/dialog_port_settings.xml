<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Baudrate -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Baudrate"
        android:textSize="14sp"
        android:textColor="?attr/colorOnSurface"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/spinnerBaudRate"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/spinner_background" />

    <!-- Data Bits -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Datenbits"
        android:textSize="14sp"
        android:textColor="?attr/colorOnSurface"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/spinnerDataBits"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/spinner_background" />

    <!-- Stop Bits -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stoppbits"
        android:textSize="14sp"
        android:textColor="?attr/colorOnSurface"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/spinnerStopBits"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/spinner_background" />

    <!-- Parity -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Parität"
        android:textSize="14sp"
        android:textColor="?attr/colorOnSurface"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/spinnerParity"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/spinner_background" />

    <!-- Flow Control -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Flow Control"
        android:textSize="14sp"
        android:textColor="?attr/colorOnSurface"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/spinnerFlowControl"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/spinner_background" />

    <!-- FIFO -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FIFO"
        android:textSize="14sp"
        android:textColor="?attr/colorOnSurface"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/spinnerFifo"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/spinner_background" />

    <!-- Warning -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="⚠️ Nach dem Anwenden wird die Moxa automatisch neu gestartet!"
        android:textSize="12sp"
        android:textColor="@color/status_warning"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        android:background="?attr/colorSurfaceVariant" />

</LinearLayout>