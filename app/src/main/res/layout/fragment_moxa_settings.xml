<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/android:colorBackground"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Minimalist Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/moxa_settings_title"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/moxa_device_subtitle"
            android:textSize="16sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp"
            android:background="?attr/colorSurfaceVariant"
            android:padding="12dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/textViewMoxaModel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/checking_connection"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/progressBarConnection"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="8dp"
                android:visibility="gone"
                android:indeterminateTint="?attr/colorPrimary" />

        </LinearLayout>

        <!-- Connection Settings Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/connection_settings_title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="16dp" />

                <!-- IP Address Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayoutMoxaIp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:hint="@string/moxa_ip_address_label"
                    app:helperText="@string/ip_address_example"
                    app:boxStrokeColor="?attr/colorPrimary"
                    app:hintTextColor="?attr/colorPrimary"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextMoxaIp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textSize="16sp"
                        android:fontFamily="monospace" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Port Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayoutMoxaPort"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:hint="@string/port_label"
                    app:helperText="@string/port_default_hint"
                    app:boxStrokeColor="?attr/colorPrimary"
                    app:hintTextColor="?attr/colorPrimary"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextMoxaPort"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textSize="16sp"
                        android:fontFamily="monospace" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Save Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonSaveMoxaSettings"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="@string/save_settings_button"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:backgroundTint="?attr/colorPrimary"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/ic_settings_24"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    style="@style/Widget.Material3.Button" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Connection Test Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/connection_test_title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="16dp" />

                <!-- Test Buttons Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp"
                    android:gravity="center_vertical"
                    android:baselineAligned="false">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonTestConnection"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:text="@string/test_connection_button"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:maxLines="1"
                        android:ellipsize="end"
                        app:backgroundTint="?attr/colorPrimary"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/ic_network_24"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp"
                        style="@style/Widget.Material3.Button" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonPingMoxa"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:text="@string/ping_test_button"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:maxLines="1"
                        android:ellipsize="end"
                        app:backgroundTint="?attr/colorSecondary"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/ic_speed_24"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp"
                        style="@style/Widget.Material3.Button" />

                </LinearLayout>

                <!-- Test Results -->
                <TextView
                    android:id="@+id/textViewConnectionResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ready_for_connection_test"
                    android:textSize="14sp"
                    android:minHeight="48dp"
                    android:gravity="center_vertical"
                    android:background="?attr/colorSurfaceVariant"
                    android:padding="16dp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:drawableStart="@drawable/ic_status_pending"
                    android:drawablePadding="12dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Moxa Management Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/device_management_title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="16dp" />

                <!-- Management Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonMoxaStatus"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:text="@string/device_info_button"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:backgroundTint="?attr/colorTertiary"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/ic_info_24"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp"
                        style="@style/Widget.Material3.Button" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonMoxaRestart"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:text="@string/restart_button"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:backgroundTint="?attr/colorError"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/ic_refresh_24"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp"
                        style="@style/Widget.Material3.Button" />

                </LinearLayout>

                <!-- Management Status -->
                <TextView
                    android:id="@+id/textViewMoxaStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ready_for_device_management"
                    android:textSize="14sp"
                    android:minHeight="48dp"
                    android:gravity="center_vertical"
                    android:background="?attr/colorSurfaceVariant"
                    android:padding="16dp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:drawableStart="@drawable/ic_status_pending"
                    android:drawablePadding="12dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Port Settings Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/port_settings_title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="16dp" />

                <!-- Port Details Container -->
                <LinearLayout
                    android:id="@+id/layoutPortDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="?attr/colorSurfaceVariant"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/loading_port_configuration"
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:gravity="center"
                        android:minHeight="80dp"
                        android:drawableTop="@drawable/ic_ethernet_24"
                        android:drawablePadding="12dp" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>