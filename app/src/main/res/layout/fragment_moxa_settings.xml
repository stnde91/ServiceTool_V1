<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Modern Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="32dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŒ"
                android:textSize="48sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Moxa Einstellungen"
                android:textSize="28sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/primary_dark"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NPort 5232 Device Server Konfiguration"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginTop="4dp"
                android:textColor="@color/text_secondary"
                android:fontFamily="sans-serif-light" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:background="@drawable/gradient_primary_enhanced"
                android:padding="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”—"
                    android:textSize="20sp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/textViewMoxaModel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Verbindung Ã¼berprÃ¼fen..."
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />

                <ProgressBar
                    android:id="@+id/progressBarConnection"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="8dp"
                    android:visibility="gone"
                    android:indeterminateTint="@android:color/white" />

            </LinearLayout>

        </LinearLayout>

        <!-- Connection Settings Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Card Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ”Œ"
                        android:textSize="24sp"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Verbindungseinstellungen"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_dark"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

                <!-- IP Address Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayoutMoxaIp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:hint="Moxa IP-Adresse"
                    app:helperText="z.B. 192.168.50.3"
                    app:boxStrokeColor="@color/primary"
                    app:hintTextColor="@color/primary"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextMoxaIp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textSize="16sp"
                        android:fontFamily="monospace" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Port Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayoutMoxaPort"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:hint="Port"
                    app:helperText="Standard: 4001"
                    app:boxStrokeColor="@color/primary"
                    app:hintTextColor="@color/primary"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextMoxaPort"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textSize="16sp"
                        android:fontFamily="monospace" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Save Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonSaveMoxaSettings"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Einstellungen speichern"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/primary"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/ic_settings_24"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    style="@style/Widget.MaterialComponents.Button" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Connection Test Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Card Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ§ª"
                        android:textSize="24sp"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Verbindungstest"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_dark"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

                <!-- Test Buttons Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonTestConnection"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:text="Verbindung testen"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:backgroundTint="@color/primary"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/ic_network_24"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp"
                        style="@style/Widget.MaterialComponents.Button" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonPingMoxa"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:text="Ping Test"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:backgroundTint="@color/accent"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/ic_speed_24"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp"
                        style="@style/Widget.MaterialComponents.Button" />

                </LinearLayout>

                <!-- Test Results -->
                <TextView
                    android:id="@+id/textViewConnectionResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bereit fÃ¼r Verbindungstest"
                    android:textSize="14sp"
                    android:minHeight="48dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/rounded_background_light"
                    android:padding="16dp"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="sans-serif-medium"
                    android:drawableStart="@drawable/ic_status_pending"
                    android:drawablePadding="12dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Moxa Management Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Card Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽ›ï¸"
                        android:textSize="24sp"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Device Management"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_dark"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

                <!-- Management Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonMoxaStatus"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:text="Device Info"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:backgroundTint="@color/info"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/ic_info_24"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp"
                        style="@style/Widget.MaterialComponents.Button" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonMoxaRestart"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:text="Restart"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:backgroundTint="@color/warning"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/ic_refresh_24"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp"
                        style="@style/Widget.MaterialComponents.Button" />

                </LinearLayout>

                <!-- Management Status -->
                <TextView
                    android:id="@+id/textViewMoxaStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bereit fÃ¼r Device Management"
                    android:textSize="14sp"
                    android:minHeight="48dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/rounded_background_light"
                    android:padding="16dp"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="sans-serif-medium"
                    android:drawableStart="@drawable/ic_status_pending"
                    android:drawablePadding="12dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Port Settings Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Card Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ”§"
                        android:textSize="24sp"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Port Einstellungen"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_dark"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

                <!-- Port Details Container -->
                <LinearLayout
                    android:id="@+id/layoutPortDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_background_light"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Port-Konfiguration wird geladen..."
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:fontFamily="sans-serif-light"
                        android:gravity="center"
                        android:minHeight="80dp"
                        android:drawableTop="@drawable/ic_ethernet_24"
                        android:drawablePadding="12dp" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>