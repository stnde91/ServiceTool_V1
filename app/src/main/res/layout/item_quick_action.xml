<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/md_theme_light_outline">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/iconQuickAction"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_diagnostic_24"
            app:tint="@color/md_theme_light_primary"
            tools:src="@drawable/ic_diagnostic_24" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textQuickActionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alle Zellen prüfen"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/md_theme_light_onSurface"
                tools:text="Alle Zellen prüfen" />

            <TextView
                android:id="@+id/textQuickActionDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Verbindung und Status aller Zellen testen"
                android:textSize="14sp"
                android:textColor="@color/md_theme_light_onSurfaceVariant"
                tools:text="Verbindung und Status aller Zellen testen" />

        </LinearLayout>

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_play_24"
            app:tint="@color/md_theme_light_onSurfaceVariant" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>