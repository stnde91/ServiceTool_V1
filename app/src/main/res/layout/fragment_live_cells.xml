<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LiveCellsFragment"> {/* Ersetze .LiveCellsFragment durch den tatsächlichen Pfad zu deiner Fragment-Kotlin-Klasse */}

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_live_cells"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="8dp"
        android:clipToPadding="false"
        tools:listitem="@layout/item_live_cell" /> {/* Optional: Verweise hier auf dein Item-Layout für die Vorschau */}

    <ProgressBar
        android:id="@+id/progressBar_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone" /> {/* Standardmäßig unsichtbar, wird bei Bedarf eingeblendet */}

    <TextView
        android:id="@+id/textView_empty_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keine Zellen verfügbar."
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone" /> {/* Standardmäßig unsichtbar, wird bei Bedarf eingeblendet */}

</androidx.constraintlayout.widget.ConstraintLayout>