<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="@drawable/gradient_primary_enhanced"
    android:padding="24dp"
    android:orientation="vertical"
    android:gravity="center"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <!-- Company Logo -->
    <ImageView
        android:id="@+id/imageCompanyLogo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/company_logo"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="12dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerInside"
        android:contentDescription="Firmenlogo"
        android:background="@drawable/logo_background_circle"
        android:padding="8dp"
        android:elevation="6dp" />

    <!-- Company Name directly under Logo -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Waagen Döhrn GmbH &amp; Co. KG"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="16dp" />

    <!-- App Title Section -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Service Tool"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flintec RC3D • Version 1.103"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:alpha="0.9"
            android:fontFamily="sans-serif-light"
            android:layout_marginTop="4dp"
            android:gravity="center" />

    </LinearLayout>

</LinearLayout>